<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ujujzk.easyenglish.eeapp" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VocabularyActivity"
            android:label="@string/title_activity_vocabulary" >
        </activity>
        <activity
            android:name=".RuleActivity"
            android:label="@string/title_activity_rule" >
        </activity>
        <activity
            android:name=".GrammarActivity"
            android:label="@string/title_activity_grammar" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".TaskActivity"
            android:label="@string/title_activity_task" >
        </activity>
        <activity
                android:name=".AddWordActivity"
            android:label="@string/title_activity_add_word" >
        </activity>
        <activity
                android:name=".WordSlideActivity"
                android:label="@string/title_activity_word_slide">
        </activity>
    </application>

</manifest>
