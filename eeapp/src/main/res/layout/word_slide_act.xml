<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/app_color_main">

    <RelativeLayout
            android:id="@+id/wslide_act_rl_top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true">

        <ImageView
                android:id="@+id/wslide_act_img_prononciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/wslide_act_img_go_back"
                android:clickable="true"
                android:src="@drawable/ic_volume_down_black_36dp"/>

        <ImageView
                android:id="@+id/wslide_act_img_go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/ic_exit_to_app_black_36dp"/>

    </RelativeLayout>

    <FrameLayout
            android:id="@+id/wslide_act_fl_parent_layout_for_word_learn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wslide_act_rl_top_menu"
            android:background="@drawable/word_slide_bgr">

    </FrameLayout>

</RelativeLayout>
